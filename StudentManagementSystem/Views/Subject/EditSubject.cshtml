@model Subject;

@{
    ViewData["Title"] = "Subject";
}
<div class="container text-start">
    <div class="row">
        <partial name="_SideNavPartial" />
        <div class="col border">
            <div class="container text-start">
                <div class="border p-2 mt-3">
                    <a asp-controller="Subject" asp-action="ListSubject" class="btn btn-light" data-mdb-ripple-init data-mdb-ripple-color="dark">
                        <i class="bi bi-list"></i>
                        Subject List
                    </a>
                </div>
                <div class="d-flex justify-content-center">
                    <div>
                        <h4 class="mt-3">Edit Subject</h4>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form class="mt-2" style="width:350px;" method="POST" asp-action="EditSubject" asp-controller="Subject">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input class="form-control" asp-for="Name" placeholder="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-danger">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>