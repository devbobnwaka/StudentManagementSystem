@model IEnumerable<Subject>;
@{
    ViewData["Title"] = "Subject";
}
<div class="container text-start">
    <div class="row">
        <partial name="_SideNavPartial" />
        <div class="col border">
            <div class="container text-start">
                <div class="border p-2 mt-3">
                    <a asp-controller="Subject" asp-action="CreateSubject" class="btn btn-light" data-mdb-ripple-init data-mdb-ripple-color="dark">
                        <i class="bi bi-person-plus-fill"></i>
                        Add Subject
                    </a>
                </div>
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light ">
                        <tr>
                            <th>Subject</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Subject subject in Model)
                        {
                            <tr>
                                <td>
                                    <p class="fw-normal mb-1">@subject.Name</p>
                                    <p class="text-muted mb-0"></p>
                                </td>
                                
                                <td>
                            @*         <a asp-controller="Subject" asp-action="GetSubject" asp-route-id="@subject.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                        View
                                    </a> *@
                                    <a asp-controller="Subject" asp-action="EditSubject" asp-route-id="@subject.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                        Edit
                                    </a>
                                    <a asp-controller="Subject" asp-action="DeleteSubject" asp-route-id="@subject.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>