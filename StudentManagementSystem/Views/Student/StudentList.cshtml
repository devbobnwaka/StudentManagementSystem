@model IEnumerable<Student>;
@{
    ViewData["Title"] = "Student";
}
<div class="container text-start">
    <div class="row">
        <partial name="_SideNavPartial" />
        <div class="col border">
            <div class="container text-start">
                <div class="border p-2 mt-3">
                    <a asp-controller="Student" asp-action="CreateStudent" class="btn btn-light" data-mdb-ripple-init data-mdb-ripple-color="dark">
                        <i class="bi bi-person-plus-fill"></i>
                         Add Student
                    </a>
                </div>
                <table class="table align-middle mb-0 bg-white">
                    <thead class="bg-light ">
                        <tr>
                            <th>Name</th>
                            <th>Class</th>
                            <th>Date Of Birth</th>
                            @* <th>Position</th> *@
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Student student in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="https://mdbootstrap.com/img/new/avatars/8.jpg"
                                             alt=""
                                             style="width: 45px; height: 45px"
                                             class="rounded-circle" />
                                        <div class="ms-3">
                                            <p class="fw-bold mb-1">@student.Name</p>
                                            <p class="text-muted mb-0"></p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <p class="fw-normal mb-1">@student.Class</p>
                                    <p class="text-muted mb-0"></p>
                                </td>
                                <td>
                                     @* <span class="badge badge-success rounded-pill d-inline">Active</span> *@
                                    <p class="fw-normal mb-1">@student.DateOfBirth?.ToString("dd-MM-yyyy")</p>

                                </td>
                                @* <td>Senior</td> *@
                                <td>
                                    <a asp-controller="Student" asp-action="GetStudent" asp-route-id="@student.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                        View
                                    </a>
                                    <a asp-controller="Student" asp-action="EditStudent" asp-route-id="@student.Id" type="button" class="btn btn-link btn-sm btn-rounded">
                                        Edit
                                    </a>
                                    <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@student.Id"  type="button" class="btn btn-link btn-sm btn-rounded">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>