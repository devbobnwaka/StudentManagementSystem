@model CreateStudentViewModel;

@{
    ViewData["Title"] = "Student";
}
<div class="container text-start">
    <div class="row">
        <partial name="_SideNavPartial" />
        <div class="col border">
            <div class="container text-start">
                <div class="border p-2 mt-3">
                    <a asp-controller="Student" asp-action="StudentList" class="btn btn-light" data-mdb-ripple-init data-mdb-ripple-color="dark">
                        <i class="bi bi-list"></i>
                        Student List
                    </a>
                </div>
                <div class="d-flex justify-content-center">
                    <div>
                        <h4 class="mt-3">Create Student</h4>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <form class="mt-2"  style="width:350px;" method="POST" asp-action="CreateStudent" asp-controller="Student">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input class="form-control" asp-for="Name" placeholder="Name"/>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Class"></label>
                                <div>
                                    <select class="form-select" asp-for="Class" asp-items="Html.GetEnumSelectList<Class>()">
                                        <option value="">Please Select</option>
                                    </select>
                                    <span asp-validation-for="Class" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="DateOfBirth" class="form-label"></label>
                                <input class="form-control" asp-for="DateOfBirth" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ContactInformation" class="form-label"></label>
                                <textarea class="form-control" asp-for="ContactInformation" ></textarea>
                                <span asp-validation-for="ContactInformation" class="text-danger"></span>
                            </div>
                    
                            <button type="submit" class="btn btn-danger">Create Student</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>